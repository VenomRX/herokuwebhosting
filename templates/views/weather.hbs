<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
    <title>Document</title>
    <style>
        body{
            display: flex;
            flex-direction: column;
            font-size: 2rem;
        }
        .col-md-10.col-12.mx-auto {
    display: flex;
    flex-direction: column;
    margin-top: 20px;
}
    </style>
</head>
<body>
{{>header}}
        <div class="container-fluid main_header">
            <div class="row">
                <div class="col-md-10 col-12 mx-auto">
                      <div class="main_content">
                          <form action="" class="temp_form">
                              <input type="text" id="cityName" placeholder="Enter Your city Name">
                              <input type="submit" value="search" id="submitButton">

                          </form>
                      </div>
                      <div class="tempInformation">
                          <div class="top_layer">
                              <p id="day">Tuesday</p>
                              <p id="today_data">13 oct</p>
                          </div>
                          <div class="main_layer">
                              <p id="city_name">Get Output Here</p>
                              <div class="middle_layer data_hide">
                                  <p id="temp"><span>0</span><sup>0</sup>C</p>
                                  <p id="temp_status"> <i class="fa fa-cloud"></i></p>
                              </div>
                          </div>
                      </div>
                </div>
            </div>
        </div>
{{>footer}}
</body>
<script src="js/main.js"></script>
</html>
